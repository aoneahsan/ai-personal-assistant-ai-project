{
  "name": "productadoption-extension",
  "version": "1.0.0",
  "description": "Browser extension for ProductAdoption - Create interactive product tours visually",
  "private": true,
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "build:chrome": "npm run build && npm run package:chrome",
    "build:firefox": "npm run build && npm run package:firefox",
    "build:edge": "npm run build && npm run package:edge",
    "package:chrome": "node scripts/package.js chrome",
    "package:firefox": "node scripts/package.js firefox",
    "package:edge": "node scripts/package.js edge",
    "lint": "eslint src/**/*.js",
    "test": "jest",
    "clean": "rm -rf build dist"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "babel-loader": "^9.1.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.0",
    "eslint": "^8.42.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.5.0",
    "mini-css-extract-plugin": "^2.7.0",
    "style-loader": "^3.3.0",
    "terser-webpack-plugin": "^5.3.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "zip-webpack-plugin": "^4.0.1"
  },
  "dependencies": {},
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
}